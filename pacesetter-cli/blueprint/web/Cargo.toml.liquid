[package]
name = "{{project-name}}-web"
version = "0.0.1"
edition = "2021"
publish = false

[lib]
doctest = false

[dependencies]
anyhow = "1.0"
axum = "0.7"
pacesetter = { workspace = true }
{{project-name}}-config = { path = "../config" }
{% unless template_type == "minimal" -%}
{{project-name}}-db = { path = "../db" }
{%- endunless %}
serde = { version = "1.0", features = ["derive"] }
tokio = { version = "1.34", features = ["full"] }
tower-http = { version = "0.5", features = ["full"] }
tracing = "0.1"
{% unless template_type == "minimal" -%}
uuid = { version = "1.6", features = ["serde"] }
{%- endunless %}

[dev-dependencies]
fake = "2.9"
rand = "0.8"
regex = "1.10"
# TODO: remove this later!
sqlx = { version = "0.7", features = [ "runtime-tokio", "tls-rustls", "postgres", "migrate" ] }
serde_json = "1.0"
tower = { version = "0.4", features = ["util"] }
hyper = { version = "1.0", features = ["full"] }
{% unless template_type == "minimal" -%}
{{project-name}}-db = { path = "../db", features = ["test-helpers"] }
{%- endunless %}
pacesetter-procs = { workspace = true }
